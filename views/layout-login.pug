doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    // Import materialize.css
    link(rel='stylesheet' href='../../static/css/normalize.css')
    link(type='text/css' rel='stylesheet' href='../../static/css/materialize.min.css' media='screen,projection')
    link(rel='stylesheet' href='../../static/css/main.css')
    // Let browser know website is optimized for mobile
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body(style='background-color: #222222;')
    .row
      h4.center.white-text CATEM MEXICO  #fuerzacatem
      .col.s10.offset-s1
        .col.s12.center(style='padding-bottom: 15%; padding-top: 10%;')
          img(style='width: 70%; width: 70%;' src='/../static/img/logo.webp' alt='Logo Catem')
        block content
    // JavaScript at end of body for optimized loading
    script(type='text/javascript' src='../../static/js/materialize.min.js')
    script(src='../../static/js/app.js')
