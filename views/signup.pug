extends layout-login.pug
block content 

  .row
      .col.s10.offset-s1
        form.col.s12
          .row
            .col.s12
              .card(style='border-radius: 10px;background-color: #444444;')
                .card-content
                  img(src='static/img/add_picture.png', style='width:90%', id='pv_categoriaImg')
                  span.btn.btn-file
                    i.material-icons.left cloud_upload
                    |Subir
                    input(type='file', name='categoriaImg', id='categoriaImg')
          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Nombre completo
            input.white-text(type='text' name='' placeholder='nombre completo' style='border: none; margin: 0;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;')
            legend Apellidos
            input.white-text(type='text' name='' placeholder='apellido completos' style='border: none;margin: 0;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;')
            legend correo electronico
            input.white-text(type='email' name='' placeholder='ejemplo@gmail.com' style='border: none;margin: 0;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;')
            legend Contrase√±a
            input.white-text(type='password' name='' placeholder='****************' style='border: none;margin: 0;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;')
            legend Fecha de nacimiento
            input.white-text(type="date" name='' style='border: none;margin: 0;' id='' required)
           
          
          button.btn.col.s8.offset-s2(value='Ingresar' type='submit' style='border-radius: 10px; margin-top: 20px;background-color: #dd1917;')
            i.material-icons.left person
            |Registrarse
        a.btn.col.s6.offset-s3(href="/" style='border-radius: 10px; background-color: #dd1917;margin-bottom: 20px;margin-top: 20px;')
          i.material-icons.left chevron_left
          | Volver





  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  script. 
    const categoriaImg = document.getElementById('categoriaImg')

    categoriaImg.addEventListener('change', function (){
      const file = this.files[0]
      console.log(file)
      if(file){
        const reader = new FileReader();
        reader.addEventListener('load', function(){
          console.log(this)
          pv_categoriaImg.setAttribute('src', this.result)
        })
        reader.readAsDataURL(file)
      } else {
        pv_categoriaImg.setAttribute('src', 'static/img/add_picture.png')
      }
    })


