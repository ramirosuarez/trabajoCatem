block content 

  .row
      h1 Afiliacion
      .col.s10.offset-s1
        form.col.s12
          
          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Domicilio
            input.white-text(type='text' name='' placeholder='Domicilio' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Codigo postal
            input.white-text(type='text' name='' placeholder='codigo postal' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Telefono
            input.white-text(type='text' name='' placeholder='971 xxx xxxx' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Redes socilales
            input.white-text(type='text' name='' placeholder='facebook,intagram,twiter' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Oficios
            input.white-text(type="text" placeholder='carpintera, electricista,etc' name='' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)
           
          
          button.btn.col.s12(value='Ingresar' type='submit' style='border-radius: 10px; margin-top: 20px;background-color: #dd1917;')
            i.material-icons.left send
            |aceptar
          a.btn.col.s12(href="/home" style='border-radius: 10px; background-color: #dd1917;margin-top: 20px;')
            i.material-icons.left chevron_left
            | Cancelar





