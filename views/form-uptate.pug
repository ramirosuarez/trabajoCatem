extends layouts/layout-dash.pug
block content 
  .row
      .col.s10.offset-s1
        form.col.s12(style='margin-top: 20px;')
          .row
            .col.s12
              .card(style='border-radius: 10px;background-color: #444444;')
                .card-content
                  img(src='static/img/add_picture.png', style='width:80%', id='pv_categoriaImg')
                  span.btn.btn-file
                    i.material-icons.left cloud_upload
                    |Subir
                    input(type='file', name='categoriaImg', id='categoriaImg')

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Nombre completo
            input.white-text(type='text' name='' placeholder='Nombre Completo' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Apellidos
            input.white-text(type='text' name='' placeholder='Apellidos Completos' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Correo electronico
            input.white-text(type='email' name='' placeholder='ejemplo@gmail.com' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Fecha de nacimiento
            input.white-text(type="date" name='' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Domicilio
            input.white-text(type='text' name='' placeholder='Domicilio' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Codigo Postal
            input.white-text(type='text' name='' placeholder='Codigo postal' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Numero telefonico
            input.white-text(type='text' name='' placeholder='Numero telefonico' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          fieldset.col.s12.center.white-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
            legend Oficios
            input.white-text(type='text' name='' placeholder='Electricidad,Mecanica,etc' style='border: none;margin-bottom: 20px;width: 90%;' id='' required)

          
          
          
          button.btn.col.s10.offset-s1(value='Ingresar' type='submit' style='border-radius: 10px; margin-top: 20px;background-color: #dd1917;')
            i.material-icons.left save
            |guardar
          a.btn.col.s10.offset-s1(href="/home" style='border-radius: 10px; background-color: #dd1917;margin-top: 20px;')
            i.material-icons.left.large cancel
            | Cancelar





  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  script. 
    const categoriaImg = document.getElementById('categoriaImg')

    categoriaImg.addEventListener('change', function (){
      const file = this.files[0]
      console.log(file)
      if(file){
        const reader = new FileReader();
        reader.addEventListener('load', function(){
          console.log(this)
          pv_categoriaImg.setAttribute('src', this.result)
        })
        reader.readAsDataURL(file)
      } else {
        pv_categoriaImg.setAttribute('src', 'static/img/add_picture.png')
      }
    })
