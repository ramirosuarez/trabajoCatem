doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    // Import materialize.css
    link(rel='stylesheet' href='../../static/css/normalize.css')
    link(type='text/css' rel='stylesheet' href='../../static/css/materialize.min.css' media='screen,projection')
    link(rel='stylesheet' href='../../static/css/main.css')
    // Let browser know website is optimized for mobile
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    body
      .row(style='background-color: #444444;margin-bottom: 0;')
        .col.s12.red
          .row.m-0(style=' display: flex; align-items: center; margin: 12px 0;')
            .col.s9
              ul#slide-out.sidenav.p-0.m-0(style='border-radius: 10px;background-color: #444444;')
                .row.m-0
                  .col.s3
                    img(src='../../static/img/logo.png' width='100%'   style="margin: 12px;" alt='')
                  .col.s7
                    h5.center CATEM TEHUANTEPEC
                .collection(style="border:none")
                  a.collection-item(href='home-agr')
                    i.material-icons.left home
                    | Home
                  li
                    .divider(style='margin-left: 30px; margin-right: 50px')

                  a.collection-item(href='notificaciones')
                    i.material-icons.left drafts
                    | Bandeja
                  
                  a.collection-item(href='dash')
                    i.material-icons.left business_center
                    | Afiliados

                  li
                    .divider(style='margin-left: 30px; margin-right: 50px')
                  
                  a.collection-item(href='upd-agr') 
                    i.material-icons.left build
                    | Editar datos
                  
                  a.collection-item(href='/') 
                    i.material-icons.left logout
                    | Cerrar sesion

              a.sidenav-trigger(href='#' data-target='slide-out')
                img(src='../../static/img/logo.png' width='20%' alt='' style='margin-left: -90px')
        block content
             
              // JavaScript at end of body for optimized loading
      script(type='text/javascript' src='../../static/js/materialize.min.js')
      script(src='../../static/js/app.js')
